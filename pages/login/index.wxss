/* pages/login/index.wxss */

page {
  height: 100%;
}

.wrapper {
  width: 100%;
  height: 100%;
  background-color: #90d183;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top {
  padding-top: 100rpx;
  margin-bottom: 60rpx;
}

.top view {
  font-size: 40rpx;
  color: white;
  text-align: center;
  line-height: 100rpx;
}

.login-box{
  width: 440rpx;
}

.menu {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #ccc;
}

.menu image {
  width: 32rpx;
  height: 40rpx;
}

.menu input {
  font-size: 28rpx;
  color: #fff;
  padding-left: 30rpx;
}

.login{
  width: 100%;
  font-size: 28rpx;
  color: #fff;
  border: 2rpx solid #fff;
  border-radius: 6rpx;
  background-color: transparent;
  text-align: center;
  margin-top: 60rpx;
}
